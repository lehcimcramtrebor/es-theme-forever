
<?xml version="1.0" encoding="UTF-8"?>

<theme>

   <formatVersion>7</formatVersion>
  
	<view name="grid">
 
    <imagegrid name="gamegrid">
		<color>000000</color>
        <pos>0.5154 0.0697</pos>
        <size>0.4491 0.64652</size>
		<autoLayout>3 1</autoLayout>
		<margin>0 0</margin>
		<padding>-0.1 0.02 -0.1 0.1</padding>
		<autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
		<animateSelection>false</animateSelection>
		<scrollDirection>horizontal</scrollDirection>
		<centerSelection>true</centerSelection>
		<scrollLoop>true</scrollLoop>		
        <zIndex>300</zIndex>
    </imagegrid>

    <gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>5 5</padding>
      <imageColor>606060</imageColor>
      <reflexion>0.25 0.0</reflexion>	  
    </gridtile>
	
    <gridtile name="selected">
      <backgroundEdgeColor>00000000</backgroundEdgeColor>		
      <backgroundCenterColor>00000000</backgroundCenterColor>
      <imageColor>FFFFFFFF</imageColor>
      <reflexion>0.4 0.0</reflexion>	  	  
    </gridtile>
	
    <text name="gridtile">
      <color>D0D0D0</color>
      <backgroundColor>00000000</backgroundColor>
      <fontSize>0.018</fontSize>
      <fontPath>./../_assets/luckiestguy.ttf</fontPath>		 	  
      <alignment>center</alignment>
      <size>0.8 0.24</size>
    </text>

    <text name="gridtile_selected">
      <glowColor>101010</glowColor>
      <glowSize>2</glowSize>
    </text>

    <ninepatch name="gridtile.background:selected">
      <animateColor>ffffff00</animateColor>
      <animateColorTime>350</animateColorTime>
    </ninepatch>

   <image name="gridtile.marquee">
      <origin>0.5 0</origin>
      <pos>0.5 2</pos>
      <color>00000000</color>
      <size>0 0</size>	  
    </image>
	
    <image name="gridtile.marquee:selected">
      <origin>0.5 0</origin>
      <pos>0.5 1.05</pos>
      <color>FFFFFFFF</color>
      <size>1 0.4</size>
      <reflexion>0.8 0.0</reflexion>	  
    </image>
	
	</view> 
   

</theme>
