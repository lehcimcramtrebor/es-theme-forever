
<?xml version="1.0" encoding="UTF-8"?>

<theme>

   <formatVersion>7</formatVersion>
  
	<view name="grid">
 
    <imagegrid name="gamegrid">
		<color>000000</color>
        <pos>0.5154 0.0697</pos>
        <size>0.4491 0.64652</size>
		<autoLayout>3 2</autoLayout>
		<margin>0 0</margin>
		<padding>0 0 0 0</padding>
		<autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
		<animateSelection>false</animateSelection>
        <zIndex>300</zIndex>
    </imagegrid>

    <gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>5 5</padding>
      <imageColor>ffffff</imageColor>
      <reflexion>0.10 0.0</reflexion>	  
    </gridtile>
	
    <gridtile name="selected">
      <backgroundCenterColor>FFFFFF50</backgroundCenterColor>
      <imageColor>FFFFFFFF</imageColor>
    </gridtile>
	
    <text name="gridtile">
      <color>D0D0D0</color>
      <backgroundColor>00000000</backgroundColor>
      <fontSize>0.018</fontSize>
      <fontPath>${policePath}luckiestguy.ttf</fontPath>		 	  
      <alignment>center</alignment>
      <size>0.8 0.24</size>
    </text>

    <text name="gridtile_selected">
      <glowColor>101010</glowColor>
      <glowSize>2</glowSize>
    </text>

    <ninepatch name="gridtile.background:selected">
      <animateColor>ffffff00</animateColor>
      <animateColorTime>350</animateColorTime>
    </ninepatch>
	
	</view> 
   

</theme>
