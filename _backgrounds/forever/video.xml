
<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

	<subset name="Video Background Choice" displayName="${f-vbackground}">

	<include name="Outrun Grid">./backgrounds_video/01.xml</include>
	<include name="Outrun Grid 2">./backgrounds_video/02.xml</include>
	<include name="Retro Synthwave">./backgrounds_video/03.xml</include>

	</subset>
	
<view name="system">  

      <image name="wheel, wheel-1, wheel+1, wheel-2, wheel+2" extra="true">  
		 <path>${logodecoPath}logo_${logodeco}_empty.png</path>
		 <zIndex>200</zIndex>  	  
      </image>

      <image name="wheel_shadow, wheel-1_shadow, wheel+1_shadow, wheel-2_shadow, wheel+2_shadow" extra="true">  
		 <path>${hiderpi}${logodecoPath}logo_${logodeco}_empty.png</path>
		 <visible>false</visible>
		 <zIndex>200</zIndex>  	  

      </image>
	  
		<image name="background2, background3, background4" extra="true">
			<visible>true</visible>
		</image>

		<image name="background" extra="true">
			<visible>false</visible>
		</image>

	<image name="video_black" extra="true">
		<zIndex>300</zIndex>
	</image>
		
</view>

<view name="basic">  

      <image name="background, background2, background3, background4" extra="true">
		 <visible>true</visible>
      </image>
	  
</view>

<view name="detailed, video, grid">  

      <image name="background, background2, background3, background4" extra="true">
		 <visible>true</visible>
      </image>

</view>
   
</theme>
